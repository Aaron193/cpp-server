# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your production values
# DO NOT commit .env to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_strong_password_in_production
POSTGRES_DB=game_db
DATABASE_URL=postgresql://postgres:change_this_strong_password_in_production@db:5432/game_db

# =============================================================================
# WEB SERVER (Control Plane) CONFIGURATION
# =============================================================================
NODE_ENV=production
WEB_PORT=3000

# CORS Configuration
CLIENT_ORIGIN=http://localhost

# JWT Authentication
JWT_SECRET=change_this_to_a_very_long_random_secret_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Server Authentication (shared secret between game servers and control plane)
SERVER_SHARED_SECRET=change_this_to_match_your_game_servers_minimum_32_chars

# =============================================================================
# GAME SERVER (C++) CONFIGURATION
# =============================================================================
SERVER_ID=server-1

# SERVER_HOST is the hostname/IP that clients will use to connect
# Use 'localhost' for local development, or your public IP/domain for production
# Note: The server always binds to 0.0.0.0 internally, this is just for registration
SERVER_HOST=localhost

SERVER_PORT=9001
SERVER_REGION=us-east-1
MAX_PLAYERS=100

# URL for game server to communicate with web API (internal Docker network)
WEB_API_URL=http://web:3000

# =============================================================================
# CLIENT CONFIGURATION
# =============================================================================
# Public URL where the web API is accessible from the browser
CLIENT_API_BASE=http://localhost:3000

# WebSocket game server URL (should be publicly accessible)
CLIENT_GAME_SERVER_WS=ws://localhost:9001

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================
NGINX_PORT=80
NGINX_SSL_PORT=443
