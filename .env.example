# ========== PRODUCTION ENVIRONMENT CONFIG ==========

# DATABASE CONFIGURATION
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_strong_password_in_production
POSTGRES_DB=game_db
DATABASE_URL=postgresql://postgres:change_this_strong_password_in_production@db:5432/game_db

# ========== WEB SERVER CONFIG ==========
NODE_ENV=production
WEB_PORT=3000

# CORS Configuration
CLIENT_ORIGIN=http://localhost

# JWT Authentication
JWT_SECRET=change_this_base64_32
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Server Authentication (shared secret between game servers and web server)
SERVER_SHARED_SECRET=change_this_match_game_server

# ========== C++ GAME SERVER CONFIG ==========
SERVER_ID=server-1

# SERVER_HOST is the hostname/IP that clients will use to connect
# Use 'localhost' for local development, or your public IP/domain for production
# Note: The server always binds to 0.0.0.0 internally, this is just for registration
SERVER_HOST=localhost

SERVER_PORT=9001
SERVER_REGION=dev-server # eg: us-east, us-west, asia, etc.
MAX_PLAYERS=100

# URL for game server to communicate with web API (internal Docker network)
WEB_API_URL=http://web:3000

# ============ CLIENT CONFIGURATION ============
# Public URL where the web API is accessible from the browser
CLIENT_API_BASE=http://localhost:3000

# WebSocket game server URL (should be publicly accessible)
CLIENT_GAME_SERVER_WS=ws://localhost:9001

# ============ NGINX CONFIGURATION ============
NGINX_PORT=80
NGINX_SSL_PORT=443
